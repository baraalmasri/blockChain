1   #importing library 
2import numpy as np 
3   import matplotlib.pyplot as plt 
4   import pandas as pd 
5   from sklearn.model_selection import train_test_split 
6   
7   dataset = pd.read_csv('Salary_Data.csv') 
8   #importing datasets 
9   #here simpley we chouse the x colum and the other side we chouse the y colums 
10   x= dataset.iloc[:,:-1].values 
11   y= dataset.iloc[:,1].values 
12   #splitting the dataset into training set and test set 
13   x_train,x_test,y_train,y_test =train_test_split(x,y,test_size=1/3,random_state=0 ) 
14   
15   #fitting simple linear regression to the training set 
16   #here we train the model simple linear regression model as we see 
17   #fit the model by our data 
18   #burada model ogrenmektedir 
19   from sklearn.linear_model import LinearRegression 
20   regressor= LinearRegression() 
21   regressor.fit(x_train,y_train) 
22   
23   #predicting the test set results 
24   #Test seti sonuçlarını tahmin etmek 
25   #burada model ogrendikten sonra sonuclara bakacaz 
26   """sadace x test setisi icin bakiyoruz burada yani 
27   aslinda x_train yapmamiz gerek """ 
28   y_predict= regressor.predict(x_test) 
29   
30   #visualising the training set results 
31   '''burada  grafigi ciziyoruz x'ler ve 
32   y'ler gercek datanin grafgi ''' 
33   plt.scatter(x_train,y_train ,color='red') 
34   '''burada  grafigi ciziyoruz x'ler gercek datanin x'leri 
35   y'ler ise egitlimis  datanin grafgi ''' 
36   plt.scatter(x_train,regressor.predict(x_train) ,color='blue') 
37   plt.title('salary vs experience (training set)') 
38   plt.xlabel('year of experience') 
39   plt.ylabel('salary') 
40   plt.show() 
41   
42   
43   #test setisi icin grafigi cizecegiz 
44   plt.scatter(x_test,y_test ,color='red') 
45   '''burada  grafigi ciziyoruz x'ler gercek datanin x'leri 
46   y'ler ise egitlimis  datanin grafgi ''' 
47   plt.scatter(x_train,regressor.predict(x_train) ,color='blue') 
48   plt.title('salary vs experience (training set)') 
49   plt.xlabel('year of experience') 
50   plt.ylabel('salary') 
51   plt.show()
